<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<DialogPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mikemillar.routesheet.DialogController"
            prefHeight="400.0" prefWidth="600.0" >
    <content>

        <VBox>
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="VIN:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="vinField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Year" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="yearField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Make" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="makeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Model" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="modelField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label text="Color" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="colorField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Label text="Mileage" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="mileageField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                <Label text="Notes" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextArea fx:id="vehNotesField" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="4"/>
            </GridPane>
        </VBox>

    </content>
</DialogPane>
